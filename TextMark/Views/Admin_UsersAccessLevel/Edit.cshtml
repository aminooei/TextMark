@model TextMark.Models.Users_Access_Level_TB
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Edit User Access Level";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Edit</h1>

<h4>User Access Level</h4>
<hr />
