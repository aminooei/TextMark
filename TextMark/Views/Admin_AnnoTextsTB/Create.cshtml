@model TextMark.Models.Annotations_TB

@{
    ViewData["Title"] = "Create an Annotation Text";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Create</h1>


<hr />
@*<div class="row">
    <div class="col-md-4">*@
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Annotation_Text" class="control-label"></label>
                @*<input asp-for="Annotation_Text" class="form-control" />*@
                <textarea asp-for="Annotation_Text" class="form-control" rows="10" cols="50" ></textarea>
                <span asp-validation-for="Annotation_Text" class="text-danger"></span>
            </div>
            <div class="form-group" type="hidden">
                @*<label asp-for="Date" class="control-label" type="hidden"></label>*@
                <input ID="Date_Input" asp-for="Date" class="form-control" type="hidden"/>
                <span asp-validation-for="Date" class="text-danger" type="hidden"></span>
            </div>    
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    @*</div>
</div>*@

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    document.getElementById('Date_Input').value = new Date().toISOString().substring(0, 16);
</script>
}
