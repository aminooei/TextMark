@model IEnumerable<TextMark.Models.ClassificationLabels_TB>

@{
    ViewData["Title"] = "ClassificationLabelsTB Admin Page";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Classification Labels Management</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Classification Label</a>
</p>
@*<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="container" id="Users_Container">*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassificationLabel_Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassificationLabel_Background_Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassificationLabel_ShortCut_Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects_TB.Project_Name)
            </th>

            <th>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassificationLabel_Text)
            </td>
            <td>
                <div style="width: 200px; height: 40px; text-align: center; background-color: @item.ClassificationLabel_Background_Color;">@Html.DisplayFor(modelItem => item.ClassificationLabel_Background_Color)</div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassificationLabel_ShortCut_Key)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projects_TB.Project_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassificationLabel_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClassificationLabel_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassificationLabel_ID">Delete</a>
            </td>
        </tr>
                }
    </tbody>
</table>
