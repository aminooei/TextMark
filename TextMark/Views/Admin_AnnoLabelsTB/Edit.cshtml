@model TextMark.Models.Annotations_Labels_TB

@{
    ViewData["Title"] = "Edit Annotation Label";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Edit Annotation Label</h1>

<hr />
@*<div class="row">
    <div class="col-md-4">*@
@*<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="container" id="Users_Container">*@
<form asp-action="Edit" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Anno_Label_ID" />
    <div class="form-group">
        <label asp-for="Annotations_TB.Annotation_Text" class="control-label"></label>
        @*<input asp-for="Username" class="form-control" autocomplete="false" />*@
        @Html.DropDownList("Annotation_ID", new SelectList(ViewBag.Annotations, "Annotation_ID", "Annotation_Text"), "Select an Annotation Text",
        new { @class = "form-control" })
        <span asp-validation-for="Annotations_TB.Annotation_Text" class="text-danger"></span>
    </div>    
    <div class="form-group">
        <label asp-for="Label_ID" class="control-label"></label>
        @Html.DropDownList("Label_ID", new SelectList(ViewBag.Labels, "Label_ID", "Label_Text"), "Select a Label",
                  new { @class = "form-control" })
        <span asp-validation-for="Label_ID" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
    @*</div>
    </main>*@

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
