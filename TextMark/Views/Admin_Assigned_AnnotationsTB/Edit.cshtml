@model TextMark.Models.Assigned_Annotations_ToUsers_TB

@{
    ViewData["Title"] = "Edit Assigned Annotations To Users";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Edit Assigned Annotations To Users</h1>

<hr />
@*<div class="row">
    <div class="col-md-4">*@
@*<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="container" id="Users_Container">*@
<form asp-action="Edit" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Assigned_Anno_ID" />
    <div class="form-group">
        <label asp-for="Projects_TB.Project_Name" class="control-label"></label>
        @Html.DropDownList("Project_ID", new SelectList(ViewBag.Projects, "Project_ID", "Project_Name"), "Select a Project",
new { @class = "form-control" })
        <span asp-validation-for="Projects_TB.Project_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Annotations_TB.Annotation_Text" class="control-label"></label>
        @Html.DropDownList("Annotation_ID", new SelectList(ViewBag.Annotations, "Annotation_ID", "Annotation_Text"), "Select an Annotation Text",
          new { @class = "form-control" })
        <span asp-validation-for="Annotations_TB.Annotation_Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Users_TB.Username" class="control-label"></label>
        @Html.DropDownList("User_ID", new SelectList(ViewBag.Users, "User_ID", "Username"), "Select a User",
          new { @class = "form-control" })
        <span asp-validation-for="Users_TB.Username" class="text-danger"></span>
    </div>
    
    @if (ViewBag.Error != null)
    {
        <p class="text-danger">@ViewBag.Error</p>

    }
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
    @*</div>
    </main>*@

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
