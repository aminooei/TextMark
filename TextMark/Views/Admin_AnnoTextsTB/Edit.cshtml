@model TextMark.Models.Annotations_TB

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Edit Annotation Text</h1>

<hr />
@*<div class="row">
    <div class="col-md-4">*@
@*<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="container" id="Users_Container">*@
<form asp-action="Edit" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Annotation_ID" />
    <div class="form-group">
        <label asp-for="Annotation_Text" class="control-label"></label>
        @*<input asp-for="Annotation_Text" class="form-control" autocomplete="false" />*@
        <textarea asp-for="Annotation_Text" class="form-control" rows="10" cols="50"></textarea>

        <span asp-validation-for="Annotation_Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        @*<label asp-for="Date" class="control-label"></label>*@
        <input id="Date_Input" asp-for="Date" class="form-control" autocomplete="false" type="hidden" />
        <span asp-validation-for="Date" class="text-danger" type="hidden"></span>
    </div>    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
    @*</div>
    </main>*@

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    document.getElementById('Date_Input').value = new Date().toISOString().substring(0, 16);
</script>
    }
