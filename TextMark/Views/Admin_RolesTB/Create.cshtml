@model TextMark.Models.Roles_TB
@using Microsoft.AspNetCore.Http;


@{
    ViewData["Title"] = "Create a Role";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Create a Role</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role_Text" class="control-label"></label>
                <input asp-for="Role_Text" class="form-control" autocomplete="off" />
                <span asp-validation-for="Role_Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Projects_TB.Project_Name" class="control-label" type="hidden"></label>*@
                <input asp-for="Project_ID" class="form-control" autocomplete="off" value=@Context.Session.GetString("Active_ProjectID") type="hidden" />
                <span asp-validation-for="Project_ID" class="text-danger"></span>
            </div>
            <div>
                @if (ViewBag.Error != null)
                {
                    <p class="text-danger">@ViewBag.Error</p>

                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
